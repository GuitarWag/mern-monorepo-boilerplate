{
  "name": "mern-monorepo-boilerplate",
  "version": "1.0.0",
  "description": "MERN Monorepo Boilerplate",
  "private": true,
  "scripts": {
    "dev": "concurrently -n w \"yarn:watch-*\"",
    "watch-api": "cd packages/api && yarn watch",
    "watch-socket": "cd packages/socket && yarn watch",
    "watch-client": "cd packages/client && yarn start",
    "build": "lerna run --concurrency 1 build --stream",
    "prettier": "prettier --write \"packages/**/*.js\"",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shakogegia/mern-monorepo-boilerplate.git"
  },
  "keywords": [
    "mern",
    "monorepo",
    "boilerplate"
  ],
  "author": "shalva.gegia@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shakogegia/mern-monorepo-boilerplate/issues"
  },
  "homepage": "https://github.com/shakogegia/mern-monorepo-boilerplate#readme",
  "dependencies": {
    "concurrently": "^4.1.2",
    "cross-env": "^6.0.3",
    "lerna": "^3.16.4"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "lint-staged": "^10.0.0-0",
    "prettier": "^1.18.2"
  }
}
